
func make_byte_array(arena : Arena@, size : u32) byte[]
{
    buf : byte[];

    buf.data = alloc_panic(arena,size);
    buf.len = size;

    return buf;
}


func make_u32_array(arena : Arena@, size : u32) u32[]
{
    buf : u32[];

    bytes := size * u32.size;

    buf.data = alloc_panic(arena,bytes);
    buf.len = bytes;

    return buf;
}
