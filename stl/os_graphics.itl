enum x_reply_type : u8
{
    error = 0,
    reply = 1,
    map_notify = 19,
    configure_notify = 22,
}

func process_reply(win : OSWindow@)
{
    buf := &win.buf;

    len := read_array<u32>(buf,4) * 4;

    // burn through this reply
    recv_ignore(&win.sock,len);
}

