


func is_even(v : u64) bool 
{
    return (v & 1) == 0;
}

func min_signed(v1 : s64, v2 : s64) s64
{
    if(v1 < v2)
    {
        return v1;
    }

    return v2;
}

func min_unsigned(v1 : u64, v2 : u64) u64
{
    if(v1 < v2)
    {
        return v1;
    }

    return v2;
}


func max_signed(v1 : s64, v2 : s64) s64
{
    if(v1 > v2)
    {
        return v1;
    }

    return v2;
}

func max_unsigned(v1 : u64, v2 : u64) u64
{
    if(v1 > v2)
    {
        return v1;
    }

    return v2;
}