

func memcpy(dst: byte@, src: const byte@, size: u64)
{
    end : const byte@ = dst + size;

    // just do a simple copy for now
    while(dst != end)
    {
        @dst = @src;
        dst += 1;
        src += 1;
    }
}


func zero_mem(dst: byte@, size : u64)
{
    end : const byte@ = dst + size;

    while(dst != end)
    {
        @dst = 0;
        dst += 1;
    }  
}

func handle_read<T>(src: const byte@) T
{
    return @cast(T@,src);
}