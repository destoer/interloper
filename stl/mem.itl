

func memcpy(dst: byte@, src: byte@, size: u32)
{
    // just do a simple copy for now
    for i: u32 = 0; i < size; i += 1
    {
        @dst = @src;
        dst += 1;
        src += 1;
    }
}


func memset(dst: byte@, size : u32, v : u8)
{
    for i: u32 = 0; i < size; i += 1
    {
        @dst = v;
        dst += 1;
    }    
}

func zero_mem(dst: byte@, size : u32)
{
    memset(dst,size,0);
}