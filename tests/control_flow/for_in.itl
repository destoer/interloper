

func main() s32
{
    arr : u32[?] = {1,2,3,4,5};

    sum1 : u32 = 0;

    // forward
    for(i in 0 < arr.len)
    {
        sum1 += i * arr[i];
    }


    sum2 : u32 = 0;

    // reverse
    for(i in arr.len - 1 >= 0)
    {
        sum2 += i * arr[i];
    }

    // array iter
    sum3 : u32 = 15;
/*
    for(v in arr)
    {
        sum3 += v;
    }
*/

    // array iter by pointer, with idx
    // TODO: we will have to add a extra field to parser if we see a comma
    // along with a bool for the pointer for this...
    sum4 : u32 = 40;
/*
    for([@v, i] in arr)
    {
        sum4 += i * @v;
    }
*/

    res := sum1 == 40  && sum2 == 40 && sum3 == 15 && sum4 == 40;

    return cast(s32,res);
}