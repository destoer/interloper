
import <graphics>

func main() s32
{
    constant X : u32 = 640;
    constant Y : u32 = 480;

    win := gfx::open_window("interloper",X,Y);

    while(!win.quit)
    {
        gfx::process_events(&win);

        for(i in 0 < 25)
        {
            win.screen[std::rand_arr_idx<u32>(win.screen)] = std::rand_range_u32(0,0xffff_ffff);
        }

        gfx::draw_window(&win,win.screen);

        std::sleep_ms(16);
    }

    gfx::close_window(&win);

    return 0;
}